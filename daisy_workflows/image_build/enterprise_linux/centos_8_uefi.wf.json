{
  "Name": "build-centos-8",
  "Vars": {
    "google_cloud_repo": {
      "Value": "stable",
      "Description": "The Google Cloud Repo branch to use."
    },
    "installer_iso": {
      "Required": true,
      "Description": "The CentOS 8 installer ISO to build from."
    },
    "build_date": {
      "Value": "${TIMESTAMP}",
      "Description": "Build datestamp used to version the image."
    },
    "install_disk": {
      "Value": "disk-centos-8",
      "Description": "Name of the disk to install onto."
    },
    "publish_path": {
      "Required": true,
      "Description": "A path to publish the resulting image to."
    }
  },
  "Steps": {
    "build-centos": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "./enterprise_linux_uefi.wf.json",
        "Vars": {
          "el_release": "centos8",
          "google_cloud_repo": "${google_cloud_repo}",
          "install_disk": "${install_disk}",
          "installer_iso": "${installer_iso}"
        }
      }
    },
    "export-image-from-disk": {
      "Timeout": "60m",
      "IncludeWorkflow": {
        "Path": "../export/disk_export.wf.json",
        "Vars": {
          "destination": "${publish_path}",
          "source_disk": "${install_disk}"
        }
      }
    }
  },
  "Dependencies": {
    "export-image-from-disk": ["build-rhel"]
  }
}
